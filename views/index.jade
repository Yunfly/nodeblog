extends layout

block content
	if posts
		each post, i in posts
			.post
				h1
					a(href='/posts/show/#{post._id}')
						=post.title
				p.meta Posted in #{post.category} by #{post.auther} on #{moment(post.date).format("YYYY-MM-DD")}
				=post.body
				br
				a.more(href="posts/show/#{post._id}") Read More
	else
		p.noposts There is no posts
